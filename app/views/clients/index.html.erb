
<p></p>

<% form_for(@search) do |f| %>
  <span style="background-color: white; font-size: 150%; border: 1px solid black; padding: 10px; margin-top: 10px; margin-bottom: 20px;">Search: <%= f.text_field :address %> <%= f.submit 'Find' %> </span> 
<% end %>

<div class="whitebox">
<h2>Current Clients</h2>

<table>

<% col = "col_odd"%>

<% for client in @clients %>
		<tr valign="middle">
			<td class="<%=col%>">
			<%= client.address %> 
		    <%= client.people.find(:first).first_name if client.people.find(:first) %>
			</td>
			<td class="<%=col%>">
			<%= link_to "Show", client_path(client)%>
			<%= link_to "Edit", edit_client_path(client)%>
			</td>
	  </td></tr>
 	<% if col == "col_odd"
		 col = "col_even" 
	   else
	     col = "col_odd"
	   end 
	%>
<% end %>
</table>
</div>

<p><%= link_to 'New', new_client_path() %></p>